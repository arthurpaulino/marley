pkgname=marley-git
pkgver=0.1.5
pkgrel=1
pkgdesc='A bundle of console emulators for Linux (git)'
arch=(x86_64)
url=https://github.com/beaumanvienna/marley
license=(GPL)
depends=(sdl2\
         sdl2_image\
         sdl2_ttf\
         qt5-base\
         wxgtk2\
         libaio\
         sndio\
         libpulse\
         alsa-lib\
         libsndfile\
         libsamplerate\
         libpng\
         libjpeg-turbo\
         libavcodec.so\
         boost\
         boost-libs\
         libudev.so\
         libevdev\
         libusb-1.0.so\
         bluez-libs\
         libx11\
         libxrandr\
         mesa\
         libgl\
         glew\
         glibc\
         glu\
         libglvnd\
         libxi\
         lzo\
         mbedtls\
         libpcap\
         zlib\
         sfml\
         libminiupnpc.so\
         aom\
         python\
         freetype2\
         zip)

#removed in downsized PKGBUILD:
#portaudio
#soundtouch
#enet
#libavformat.so
#libavutil.so
#libcurl.so
#libzip

makedepends=(git cmake nasm)
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=(git+"${url}".git)
md5sums=('SKIP')

pkgver() {
	git -C "${pkgname%-git}" describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "${pkgname%-git}"
	aclocal
	autoconf
	automake --add-missing --foreign
	./configure --prefix=/usr MAKEFLAGS=$MAKEFLAGS
	make
}

package() {
	cd "${pkgname%-git}"
	make DESTDIR="$pkgdir/" install
}
